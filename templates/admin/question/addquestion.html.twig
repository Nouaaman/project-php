{% extends 'layout.html.twig' %}
{% block title %}
{{ parent() }}Admin - Add Question
{% endblock %}

{% block css %}
<link rel="stylesheet/less" href="/assets/css/adduser.less">
{% endblock %}

{% block body %}
<!-- messages -->
<div class="form-container">
	<div class="container">
		<form method="POST">
			<input type="hidden" name="action" value="addQuestion">
			<h2>Ajouter une question</h2>
			<div class="field">
				<label for="label">Question</label>
				<input type="text" name="label" id="label" value="{{post.label}}">
				<p class="message warning">{{registerMessages.label}}</p>
			</div>
			<div class="field">
				<label for="level">Niveau (entre 1 et 6)</label>
				<input type="text" name="level" id="level" value="{{post.level}}">
				<p class="message warning">{{registerMessages.level}}</p>
			</div>

			<!-- 
			<input type="hidden" name="action" value="addReponse"> -->
			<h2>Ajouter des r√©ponses</h2>
			<img src="/assets/img/icon-add.png" class="addAnswer">

			<div class="field">
				<input type="text" name="answerLabel[]" id="answerLabel" value="{{post.label}}">
				<div class="valid-answer">
					<input class ="check"type="checkbox" name="validAnswer" id="validAnswer" value="">
					<label for="validAnswer">Reponse correcte</label>
				</div>
				<p class="message warning">{{registerMessages.level}}</p>
			</div>
			
			<div class="field">
				<input type="text" name="answerLabel[]" id="answerLabel" value="{{post.label}}">
				<div class="valid-answer">
					<input class ="check"type="checkbox" name="validAnswer" id="validAnswer" value="">
					<label for="validAnswer">Reponse correcte</label>
				</div>
				<p class="message warning">{{registerMessages.level}}</p>
			</div>
			

			<div class="buttons">
				<button type="submit" class="btn fill">Ajouter</button>
				<a class="btn outline toggle" href="/admin/question/questions">Annuler</a>
			</div>
		</form>
	</div>
</div>
<div class="back">
	<a href="/"><img src="assets/img/back-100.png" alt="" class="back-btn"></a>
</div>


{% endblock %}