{% extends 'layout.html.twig' %}

{% block title %}
	{{ parent() }}Admin - Users
{% endblock %}


{% block css %}
	<link rel="stylesheet/less" href="/assets/css/admin.less">
{% endblock %}


{% block body %}
	<div class="allpage">
		<div class="sidebar">
			<div class="back">
				<a href="index.html"><img src="/assets/img/back-100.png" alt=""></a>
			</div>
			<div class="admin">
				<img src="https://img.icons8.com/external-tulpahn-flat-tulpahn/64/000000/external-astronaut-space-tulpahn-flat-tulpahn.png"/>
				<h4>Bienvenue Admin</h4>
			</div>
			<div class="items">
				<a href="/admin/users">
					<div class="users">
						<img src="https://img.icons8.com/external-kiranshastry-lineal-color-kiranshastry/64/000000/external-user-management-kiranshastry-lineal-color-kiranshastry-9.png"/>
						<h4>Utilisateurs</h4>
					</div>
				</a>
				<a href="/admin/question/questions">
					<div class="question active">
						<img src="/assets/img/icon-question.png"/>
						<h4>Questions</h4>
					</div>
				</a>
			</div>
		</div>
		<div class="gestion">
			<div class="titleadd">
				<h3>Gestion des Réponses</h3>
				{% for reponse in reponses %}
					<a href="/admin/reponse/add/{{reponse.id_question}}"><img src="/assets/img/icon-add.png" class="add"></a>
				{% endfor %}
			</div>
			<table class="users">
				<tr class="sticky">
					<th>Réponse</th>
					<th>Valide</th>
					<th>Opération</th>
				</tr>
				{% for reponse in reponses %}
					<tr>
						<td>{{reponse.label}}</td>
						{% if reponse.isValid == 1 %}
							<td>Vrai</td>
						{% elseif reponse.isValid == 0 %}
							<td>Faux</td>
						{% endif %}
						<td>
							<div class="tache">
								<div class="update">
									<a href="/admin/edituser/{{reponse.id}}"><img src="/assets/img/icon-update.png" class="imgupdate"></a>
								</div>
								<div class="delete">
									<a href="/admin/reponse/delete/{{reponse.id}}"><img src="/assets/img/icon-delete.png" class="imgdelete" onclick="return confirm('Êtes-vous sûr de vouloir supprimer {{ reponse.label }} ?')"></a>
								</div>
							</td>
						</td>
					</tr>
				</tr>
			</td>
		</tr>
	{% endfor %}
</table></div></div>{% endblock %}
